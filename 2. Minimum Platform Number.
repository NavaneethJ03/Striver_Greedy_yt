class Solution:
    def platform(self , arr , dep):
        n = len(arr)
        arr.sort()
        dep.sort()
        i , j = 1 , 0
        ans = count = 1
        while i < n:
            if arr[i] <= dep[j]:
                count += 1 
                i += 1 
            else:
                count -= 1
                j += 1 

            ans = max(ans , count)

        return ans

        # Time Complexity - O(N Log N)
        # Space Complexity - O(1) excluding space taken by sorting  
